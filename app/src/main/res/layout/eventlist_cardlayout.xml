<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:id="@+id/events_image"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:src="@drawable/sample_2" />

            <TextView
                android:text="Event Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_date_text"
                android:padding="5dp"
                android:layout_below="@+id/events_image"
                android:layout_alignParentLeft="true"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                />

            <TextView
                android:text="Event Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_title_text"
                android:padding="5dp"
                android:layout_below="@+id/event_date_text"
                android:layout_alignParentLeft="true"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:text="Event ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_ID"
                android:padding="5dp"
                android:visibility="invisible"
                android:layout_alignParentLeft="true"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e_location"
                android:padding="5dp"
                android:layout_below="@+id/event_title_text"
                android:layout_alignParentLeft="true"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:text="Category name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category_name_text"
                android:padding="5dp"
                android:layout_below="@+id/e_location"
                android:layout_alignParentLeft="true"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:text="tickets_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tickets_available_text"
                android:padding="5dp"
                android:layout_below="@+id/category_name_text"
                android:layout_alignParentLeft="true"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>


            <TextView
                android:text="Ticket cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ticket_cost_text"
                android:padding="5dp"
                android:layout_below="@+id/tickets_available_text"
                android:layout_alignParentLeft="true"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>


        </RelativeLayout>