<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_event_view"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/events_image"
            android:padding="10dp"
            android:src="@drawable/sample_2" />

        <TextView
            android:text="Event Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_date_text"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/events_image"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:text="Event Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_title_text"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/event_date_text"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:text="Event ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_ID"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:text="City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/e_location"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/event_title_text"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:text="Category name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category_name_text"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/e_location"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:text="tickets_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tickets_available_text"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/category_name_text"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:text="Ticket cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticket_cost_text"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/tickets_available_text"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>