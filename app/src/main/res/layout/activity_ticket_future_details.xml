<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ticket_future_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff17a0a"
    tools:context="com.kumaran.app.androidfirebaseapp.ticket_future_details">

    <include
        android:id="@+id/app_custom_toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_below="@+id/app_custom_toolbar">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ticket_future_indi_list"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/event_barcode"
        android:divider="#fff17a0a"
        android:dividerHeight="15.0sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_barcode"
        android:src="@mipmap/barcode"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

</RelativeLayout>
</RelativeLayout>
